# Prevent directory listing
Options -Indexes

# Restrict access to sensitive files
<Files ~ "\.(git|env|json|config.js|md|gitignore|gitattributes|lock|example)$">
    Order allow,deny
    Deny from all
</Files>

# Restrict access to Laravel artisan command file
<Files ~ "(artisan)$">
    Order allow,deny
    Deny from all
</Files>
